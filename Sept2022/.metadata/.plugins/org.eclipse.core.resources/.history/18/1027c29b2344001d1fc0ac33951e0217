	<%
		out.println("<h1>Product List</h1>");

		List<Product> list = null;
		try {
			list = ProductDAO.selectAllProducts();
		} catch (SQLException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}

		out.print("<table border='1' width='100%'");
		out.print("<tr><th>Id</th><th>First Name</th><th>Last Name</th><th>Edit</th><th>Delete</th></tr>");
		for (Product e : list) {
			out.print("<tr><td>" + e.getProductId() + "</td><td>" + e.getProductName() + "</td><td>" + e.getProductPrice()
					+ "</td> <td><a href='updatemain.jsp?id=" + e.getProductId()
					+ "'>edit</a></td><td><a href='/DeleteProduct?id=" + e.getProductId() + "'>delete</a></td></tr>");
		}
		out.print("</table>");

		out.close();
	%>
